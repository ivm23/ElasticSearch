<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:WpfElasticSearch">


    <Style x:Key="standartTextBox">
        <Setter Property="TextBox.HorizontalAlignment" Value="Stretch"/>
        <Setter Property="TextBox.VerticalAlignment" Value="Stretch"/>
        <Setter Property="TextBox.Margin" Value="3"/>
        <Setter Property="TextBox.TextWrapping" Value="Wrap"/>
        <Setter Property="TextBox.MinWidth" Value="25" />
        <Setter Property="TextBox.MinHeight" Value="23" />
    </Style>
    
    <Style x:Key="standartLabel">
        <Setter Property="Label.HorizontalAlignment" Value="Left"/>
        <Setter Property="Label.VerticalAlignment" Value="Top"/>
        <Setter Property="Label.Margin" Value="0"/>
        <Setter Property="Label.Height" Value="28"/>
        <Setter Property="Label.Width" Value="80"/>
    </Style>

    <Style x:Key="standartListBox">
        <Setter Property="ListBox.HorizontalAlignment" Value="Stretch"/>
        <Setter Property="ListBox.VerticalAlignment" Value="Stretch"/>
        <Setter Property="ListBox.MinHeight" Value="25"/>
        <Setter Property="ListBox.MinWidth" Value="290"/>
        <Setter Property="ListBox.Margin" Value="3,0,3,0"/>
    </Style>
    
</ResourceDictionary>